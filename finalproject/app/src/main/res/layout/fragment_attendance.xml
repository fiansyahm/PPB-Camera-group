<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.attendance.AttendanceFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp">

            <TextClock
                android:id="@+id/ftime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="12:29" />

            <TextView
                android:id="@+id/fdate"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_below="@id/ftime"
                android:layout_centerInParent="true"
                android:layout_marginTop="-5dp"
                android:text="Monday,2-November-2020" />

            <TextView
                android:id="@+id/fworkCodeTxt"
                android:layout_width="344dp"
                android:layout_height="37dp"
                android:layout_below="@id/fdate"
                android:text="Work Code" />

            <Spinner
                android:id="@+id/fspinnerWorkCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fworkCodeTxt"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/fhariTextView"
                android:layout_width="344dp"
                android:layout_height="37dp"
                android:layout_below="@id/fspinnerWorkCode"
                android:text="Hari                              Senin" />

            <TextView
                android:id="@+id/fjamMasukAwalTxt"
                android:layout_width="344dp"
                android:layout_height="37dp"
                android:layout_below="@id/fhariTextView"
                android:text="Jam Masuk Awal1       06:15" />

            <TextView
                android:id="@+id/fjamMasukTxt"
                android:layout_width="344dp"
                android:layout_height="37dp"
                android:layout_below="@id/fjamMasukAwalTxt"
                android:text="Jam Masuk1                 07.00" />

            <TextView
                android:id="@+id/fjamKeluarTxt"
                android:layout_width="344dp"
                android:layout_height="37dp"
                android:layout_below="@id/fjamMasukTxt"
                android:text="Jam Keluar1                15.30" />

            <TextView
                android:id="@+id/fjamKeluarAkhirTxt"
                android:layout_width="344dp"
                android:layout_height="37dp"
                android:layout_below="@id/fjamKeluarTxt"
                android:text="Jam Keluar Akhir1          16.30" />

            <TextView
                android:id="@+id/fphotoTxt"
                android:layout_width="344dp"
                android:layout_height="37dp"
                android:layout_below="@id/fjamKeluarAkhirTxt"
                android:text="      Photo" />

            <ImageView
                android:id="@+id/fimageAttandence"
                android:layout_width="104dp"
                android:layout_height="97dp"
                android:layout_below="@id/fphotoTxt"
                tools:srcCompat="@drawable/ic_launcher_background" />

            <Button
                android:id="@+id/fbuttonUploadPhotoAttandence"
                android:layout_width="105dp"
                android:layout_height="35dp"
                android:layout_below="@id/fimageAttandence"
                android:layout_marginTop="0dp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeStepGranularity="2sp"
                android:text="Take"
                android:onClick="operasi"/>

            <TextView
                android:id="@+id/fAttandenceSignatureTxt"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_below="@id/fjamKeluarAkhirTxt"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@id/fimageAttandence"
                android:text="Tanda Tangan" />

            <com.github.gcacace.signaturepad.views.SignaturePad
                android:id="@+id/fsignature_pad_attandence"
                android:layout_width="250dp"
                android:layout_height="123dp"
                android:layout_below="@id/fAttandenceSignatureTxt"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/fimageAttandence"
                android:background="@color/purple_200" />

            <Button
                android:id="@+id/fdeleteSignature"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_below="@id/fAttandenceSignatureTxt"
                android:layout_toRightOf="@id/fsignature_pad_attandence"
                android:background="@android:drawable/ic_menu_delete"
                />

            <CheckBox
                android:id="@+id/fwfhCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fsignature_pad_attandence"
                android:layout_centerInParent="true"
                android:text="Work From Home" />

            <RelativeLayout
                android:id="@+id/fbuttonAttandence"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/fwfhCheckBox"
                android:layout_centerHorizontal="true">

                <Button
                    android:id="@+id/fdatangbtnAttandence"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="70dp"
                    android:text="Datang"
                    android:onClick="operasi"/>

                <Button
                    android:id="@+id/fpulangbtnAttandence"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@id/fdatangbtnAttandence"
                    android:text="Pulang"
                    android:onClick="operasi"/>
            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>